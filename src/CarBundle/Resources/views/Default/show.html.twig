{% extends "base.html.twig"%}

{% block title %}
    {{ car.make }} - {{ car.name }}
    {{ parent() }}
{% endblock%}
{% block body %}
    <h3>{{ car.name }} {{ car.make }}</h3>
    <p>{{ car.description }}</p>
    <table class="table table">
        <tr>
            <td>Price</td>
            <td>{{ car.price }}</td>
        </tr>
        <tr>
            <td>Year</td>
            <td>{{ car.year }}</td>
        </tr>
        <tr>
            <td>Navigation System</td>
            <td>
                {% if car.navigation %}
                    <span class="glyphicon glyphicon-ok"></span>
                {% else %}
                    <span class="glyphicon glyphicon-remove"></span>
                {% endif %}
            </td>
        </tr>
    </table>
    <a href="{{ url('orders') }}">Back</a>
{% endblock %}